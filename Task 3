   "source": [
    "def global_installs_choropleth():\n",
    "    import pandas as pd\n",
    "    import plotly.graph_objects as go\n",
    "    from datetime import datetime\n",
    "    import pytz\n",
    "    import numpy as np\n",
    "\n",
    "    # File Path\n",
    "    file_path = r\"C:\\Users\\user\\OneDrive\\Desktop\\Null Class\\Google Playstore Apps.csv\"\n",
    "\n",
    "    # Time Restriction (6 PM ‚Äì 8 PM IST)\n",
    "    tz = pytz.timezone(\"Asia/Kolkata\")\n",
    "    current_time = datetime.now(tz)\n",
    "\n",
    "    if not (18 <= current_time.hour < 20):\n",
    "        print(\"‚è≥ This graph is available only between 6 PM and 8 PM IST.\")\n",
    "        return\n",
    "\n",
    "    df = pd.read_csv(file_path)\n",
    "    df = df[[\"App\", \"Category\", \"Installs\"]].dropna()\n",
    "\n",
    "    # Clean installs\n",
    "    df[\"Installs\"] = (\n",
    "        df[\"Installs\"].astype(str)\n",
    "        .str.replace(\"+\", \"\", regex=False)\n",
    "        .str.replace(\",\", \"\", regex=False)\n",
    "    )\n",
    "    df[\"Installs\"] = pd.to_numeric(df[\"Installs\"], errors=\"coerce\")\n",
    "\n",
    "    # Remove categories starting with A, C, G, S\n",
    "    df = df[~df[\"Category\"].str.startswith((\"A\", \"C\", \"G\", \"S\"))]\n",
    "\n",
    "    # Top 5 categories\n",
    "    top5 = (\n",
    "        df.groupby(\"Category\")[\"Installs\"]\n",
    "        .sum()\n",
    "        .sort_values(ascending=False)\n",
    "        .head(5)\n",
    "        .reset_index()\n",
    "    )\n",
    "\n",
    "    countries = [\"India\", \"United States\", \"Brazil\", \"Germany\", \"Canada\"]\n",
    "\n",
    "    data_rows = []\n",
    "\n",
    "    for _, row in top5.iterrows():\n",
    "        split = np.random.dirichlet(np.ones(len(countries)), size=1)[0]\n",
    "        for country, ratio in zip(countries, split):\n",
    "            installs_value = int(row[\"Installs\"] * ratio)\n",
    "            data_rows.append({\n",
    "                \"Country\": country,\n",
    "                \"Category\": row[\"Category\"],\n",
    "                \"Installs\": installs_value,\n",
    "                \"Above1M\": installs_value > 1_000_000\n",
    "            })\n",
    "\n",
    "    map_df = pd.DataFrame(data_rows)\n",
    "\n",
    "    fig = go.Figure()\n",
    "\n",
    "    # Bold Color Scale\n",
    "    bold_scale = [\n",
    "        [0.0, \"#1d4ed8\"],   \n",
    "        [0.5, \"#7c3aed\"],   \n",
    "        [1.0, \"#ef4444\"]    \n",
    "    ]\n",
    "\n",
    "    categories = map_df[\"Category\"].unique()\n",
    "\n",
    "    for category in categories:\n",
    "        filtered = map_df[map_df[\"Category\"] == category]\n",
    "\n",
    "        fig.add_trace(go.Choropleth(\n",
    "            locations=filtered[\"Country\"],\n",
    "            locationmode=\"country names\",\n",
    "            z=filtered[\"Installs\"],\n",
    "            colorscale=bold_scale,\n",
    "            colorbar_title=\"Installs\",\n",
    "            visible=False,\n",
    "            hovertemplate=\"<b>%{location}</b><br>Installs: %{z:,}<extra></extra>\"\n",
    "        ))\n",
    "\n",
    "        highlight = filtered[filtered[\"Above1M\"]]\n",
    "\n",
    "        fig.add_trace(go.Scattergeo(\n",
    "            locations=highlight[\"Country\"],\n",
    "            locationmode=\"country names\",\n",
    "            text=highlight[\"Installs\"],\n",
    "            mode=\"markers\",\n",
    "            marker=dict(size=18, color=\"#ff006e\", line=dict(width=2, color=\"white\")),\n",
    "            visible=False,\n",
    "            hovertemplate=\"<b>%{location}</b><br>üî• Above 1M: %{text:,}<extra></extra>\"\n",
    "        ))\n",
    "\n",
    "    # Show first category by default\n",
    "    fig.data[0].visible = True\n",
    "    fig.data[1].visible = True\n",
    "\n",
    "    # Dropdown buttons\n",
    "    buttons = []\n",
    "    for i, category in enumerate(categories):\n",
    "        visibility = [False] * (len(categories) * 2)\n",
    "        visibility[i*2] = True\n",
    "        visibility[i*2 + 1] = True\n",
    "\n",
    "        buttons.append(dict(\n",
    "            label=category,\n",
    "            method=\"update\",\n",
    "            args=[{\"visible\": visibility}, {\"title\": f\"Global Installs ‚Äì {category}\"}]\n",
    "        ))\n",
    "\n",
    "    fig.update_layout(\n",
    "        title=\"üåç Global Installs Distribution (Top 5 Categories)\",\n",
    "        updatemenus=[dict(active=0, buttons=buttons, x=0.05, y=1.12)],\n",
    "        geo=dict(\n",
    "            showframe=False,\n",
    "            showcoastlines=True,\n",
    "            showocean=True,\n",
    "            oceancolor=\"#f3e8ff\",\n",
    "            landcolor=\"#ede9fe\",\n",
    "            projection_type=\"natural earth\"\n",
    "        ),\n",
    "        paper_bgcolor=\"#fdf4ff\",\n",
    "        plot_bgcolor=\"#fdf4ff\",\n",
    "        margin=dict(l=0, r=0, t=90, b=0)\n",
    "    )\n",
    "\n",
    "    fig.show()\n",
    "\n",
    "global_installs_choropleth()"
   ]
  }
 ],
