import os
import pandas as pd
import plotly.express as px
import plotly.io as pio

# =====================================
# CREATE OUTPUT FOLDER
# =====================================
output_folder = "dashboard_html"
os.makedirs(output_folder, exist_ok=True)

# =====================================
# LOAD DATA
# =====================================
apps_df = pd.read_csv("Play Store Data.csv")
reviews_df = pd.read_csv("User Reviews.csv")

# =====================================
# TASK 1: TOP 10 CATEGORIES
# =====================================
top_categories = apps_df['Category'].value_counts().nlargest(10)

fig1 = px.bar(
    x=top_categories.index,
    y=top_categories.values,
    title="Top 10 App Categories",
    color=top_categories.index
)

fig1.update_layout(template="plotly_white")
fig1.write_html(f"{output_folder}/Category_Graph_1.html")

# =====================================
# TASK 2: FREE VS PAID APPS
# =====================================
type_counts = apps_df['Type'].value_counts()

fig2 = px.pie(
    values=type_counts.values,
    names=type_counts.index,
    title="Free vs Paid Apps"
)

fig2.update_layout(template="plotly_white")
fig2.write_html(f"{output_folder}/Type_Graph_2.html")

# =====================================
# TASK 3: RATING DISTRIBUTION
# =====================================
fig3 = px.histogram(
    apps_df,
    x="Rating",
    nbins=20,
    title="Rating Distribution"
)

fig3.update_layout(template="plotly_white")
fig3.write_html(f"{output_folder}/Rating_Graph_3.html")

# =====================================
# TASK 4: SENTIMENT DISTRIBUTION
# =====================================
sentiment_counts = reviews_df['Sentiment'].value_counts()

fig4 = px.bar(
    x=sentiment_counts.index,
    y=sentiment_counts.values,
    title="User Review Sentiment"
)

fig4.update_layout(template="plotly_white")
fig4.write_html(f"{output_folder}/Sentiment_Graph_4.html")

# =====================================
# TASK 5: INSTALLS BY CATEGORY
# =====================================
apps_df['Installs'] = (
    apps_df['Installs'].astype(str)
    .str.replace(',', '', regex=False)
    .str.replace('+', '', regex=False)
)

apps_df['Installs'] = pd.to_numeric(apps_df['Installs'], errors='coerce')

installs_by_category = apps_df.groupby('Category')['Installs'].sum().nlargest(10)

fig5 = px.bar(
    x=installs_by_category.values,
    y=installs_by_category.index,
    orientation='h',
    title="Top Categories by Installs"
)

fig5.update_layout(template="plotly_white")
fig5.write_html(f"{output_folder}/Installs_Graph_5.html")

# =====================================
# TASK 6: UPDATES OVER YEARS
# =====================================
apps_df['Last Updated'] = pd.to_datetime(apps_df['Last Updated'], errors='coerce')
updates_per_year = apps_df['Last Updated'].dt.year.value_counts().sort_index()

fig6 = px.line(
    x=updates_per_year.index,
    y=updates_per_year.values,
    title="Number of App Updates Over Years"
)

fig6.update_layout(template="plotly_white")
fig6.write_html(f"{output_folder}/Updates_Graph_6.html")

# =====================================
# CREATE MAIN DASHBOARD (index.html)
# =====================================
dashboard_html = f"""
<!DOCTYPE html>
<html>
<head>
<title>Google Play Store Analytics</title>
<style>
body {{
    font-family: Arial;
    background:#f5f5f5;
    text-align:center;
}}
.container {{
    display:flex;
    flex-wrap:wrap;
    justify-content:center;
}}
.card {{
    width:420px;
    margin:15px;
    padding:10px;
    background:white;
    box-shadow:0 4px 8px rgba(0,0,0,0.1);
}}
a {{
    text-decoration:none;
    font-weight:bold;
}}
</style>
</head>
<body>

<h1>Google Play Store Analytics Dashboard</h1>

<div class="container">
<div class="card"><a href="Category_Graph_1.html" target="_blank">Task 1: Top Categories</a></div>
<div class="card"><a href="Type_Graph_2.html" target="_blank">Task 2: Free vs Paid</a></div>
<div class="card"><a href="Rating_Graph_3.html" target="_blank">Task 3: Rating Distribution</a></div>
<div class="card"><a href="Sentiment_Graph_4.html" target="_blank">Task 4: Sentiment Analysis</a></div>
<div class="card"><a href="Installs_Graph_5.html" target="_blank">Task 5: Installs by Category</a></div>
<div class="card"><a href="Updates_Graph_6.html" target="_blank">Task 6: Updates Over Years</a></div>
</div>

</body>
</html>
"""

with open(f"{output_folder}/index.html", "w", encoding="utf-8") as f:
    f.write(dashboard_html)

print("All 6 Tasks Generated Successfully Inside 'dashboard_html' Folder!")
