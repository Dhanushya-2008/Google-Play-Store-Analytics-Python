import pandas as pd
import plotly.express as px
import os

# -----------------------------
# File paths
# -----------------------------
df_path = r"C:\Users\user\OneDrive\Desktop\Null Class\Google Playstore Apps.csv"
output_folder = r"./dashboard_html"
os.makedirs(output_folder, exist_ok=True)

# -----------------------------
# Load data
# -----------------------------
df = pd.read_csv(df_path)

# -----------------------------
# Task 1 - Top Categories
# -----------------------------
fig1 = px.bar(df['Category'].value_counts().reset_index(),
              x='index', y='Category',
              labels={'index':'Category', 'Category':'Count'},
              title='Top Categories')
fig1.write_html(os.path.join(output_folder, "Category_Graph_1.html"))

# -----------------------------
# Task 2 - App Type Distribution
# -----------------------------
fig2 = px.pie(df, names='Type', title='App Type Distribution')
fig2.write_html(os.path.join(output_folder, "Type_Graph_2.html"))

# -----------------------------
# Task 3 - Rating Distribution
# -----------------------------
fig3 = px.histogram(df, x='Rating', nbins=20, title='Rating Distribution')
fig3.write_html(os.path.join(output_folder, "Rating_Graph_3.html"))

# -----------------------------
# Task 4 - Sentiment Distribution
# -----------------------------
# Assuming you have a 'Sentiment' column
fig4 = px.pie(df, names='Sentiment', title='Sentiment Distribution')
fig4.write_html(os.path.join(output_folder, "Sentiment_Graph_4.html"))

# -----------------------------
# Task 5 - Installs by Category
# -----------------------------
# Assuming 'Installs' is numeric
df['Installs'] = df['Installs'].str.replace(',', '').str.replace('+','').astype(int)
fig5 = px.bar(df.groupby('Category')['Installs'].sum().reset_index(),
              x='Category', y='Installs', title='Installs by Category')
fig5.write_html(os.path.join(output_folder, "Installs_Graph_5.html"))

# -----------------------------
# Task 6 - Updates Over Years
# -----------------------------
# Assuming 'Last Updated' column
df['Last Updated'] = pd.to_datetime(df['Last Updated'])
df['Year'] = df['Last Updated'].dt.year
fig6 = px.line(df.groupby('Year').size().reset_index(name='Updates'),
               x='Year', y='Updates', title='Updates Over Years')
fig6.write_html(os.path.join(output_folder, "Updates_Graph_6.html"))

print("All graphs generated successfully in ./dashboard_html")
